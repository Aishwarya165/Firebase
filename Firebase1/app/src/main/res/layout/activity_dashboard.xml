<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    android:orientation="vertical"
    android:padding="30dp"
    android:layout_margin="4dp"
    tools:context=".dashboard">

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/username"
            android:text="Welcome"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/phnoview"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/idEdtEmployeeName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:hint="Name"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/idEdtEmployeeQualification"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:layout_below="@id/idEdtEmployeeName"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:hint="Qualification"
            android:importantForAutofill="no"
            android:inputType="text" />


        <EditText
            android:id="@+id/idEdtEmployeeAddress"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/idEdtEmployeeQualification"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_margin="10dp"
            android:hint="Place"
            android:inputType="textPostalAddress" />


        <Button
            android:id="@+id/idBtnSendData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Save"
            android:textSize="17dp"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/btnview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="17dp"
            android:text="View"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>